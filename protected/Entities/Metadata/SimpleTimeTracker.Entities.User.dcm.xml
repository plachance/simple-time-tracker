<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
	<entity name="SimpleTimeTracker\Entities\User" table="users">
		<unique-constraints>
			<unique-constraint name="user_email_key" columns="email"/>
			<unique-constraint name="user_username_key" columns="username"/>
		</unique-constraints>
		<id name="id" type="integer" column="user_id">
			<generator strategy="AUTO"/>
		</id>
		<field name="username" type="text" column="username" nullable="false"/>
		<field name="usernameCanonical" type="text" column="username_canonical" nullable="false"/>
		<field name="email" type="text" column="email" nullable="false"/>
		<field name="emailCanonical" type="text" column="email_canonical" nullable="false"/>
		<field name="dateTimeCreated" type="datetime" column="date_time_created" nullable="false"/>
		<field name="dateTimeLastLogin" type="datetime" column="date_time_last_login" nullable="true"/>
		<field name="enabled" type="boolean" column="enabled" nullable="false"/>
		<field name="isConfirmed" type="boolean" column="confirmed" nullable="false"/>
		<field name="confirmationCode" type="text" column="confirmation_code" nullable="true"/>
		<field name="dateTimeConfirmationTimeout" type="datetime" column="date_time_confirmation_timeout" nullable="true"/>
		<field name="password" type="text" column="password" nullable="false"/>
		<field name="hashSalt" type="text" column="hash_salt" nullable="false"/>
		<field name="roles" type="json_array" column="roles" nullable="true"/>
		<one-to-many field="tasks" target-entity="Task" mapped-by="user" />
	</entity>
</doctrine-mapping>
